{
  "manifest_version": 2,

  "name": "Dry Erase Web",
  "description": "Dry Erase Web",
  "version": "1.0",

  "permissions": [
    "http://dryeraseweb-dev/",
    "tabs"
  ],
  "web_accessible_resources": [ "css/lib/bootstrap.min.css", "css/popup.css"],
  "browser_action": {
    "default_icon": "images/Icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css" : [ "css/lib/bootstrap.min.css", "css/lib/jquery.ui.all.css","css/popup.css"],
      "js": [ "js/lib/jquery-1.9.1.js", "js/app/content.js"]
    }],
  "background": {
    "scripts": ["js/app/background.js"],
    "persistent": true
  }
  
  
}